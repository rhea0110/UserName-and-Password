//Creating the Data Carrier Class(DCC)

package com.company;

public class DCC {
    private String userName;
    private String passWord;
    private String secureQue;
    private String secureAns;

    public DCC(String userName, String passWord, String secureQue, String secureAns) {
        this.userName = userName;
        this.passWord = passWord;
        this.secureQue = secureQue;
        this.secureAns = secureAns;
    }

    public String getUserName() {
        return userName;
    }

    public void setUserName(String userName) {
        this.userName = userName;
    }

    public String getPassWord() {
        return passWord;
    }

    public void setPassWord(String passWord) {
        this.passWord = passWord;
    }

    public String getSecureQue() {
        return secureQue;
    }

    public void setSecureQue(String secureQue) {
        this.secureQue = secureQue;
    }

    public String getSecureAns() {
        return secureAns;
    }

    public void setSecureAns(String secureAns) {
        this.secureAns = secureAns;
    }

    @Override
    public String toString() {
        return "DCC{" +
                "userName='" + userName + '\'' +
                ", passWord='" + passWord + '\'' +
                ", secureQue='" + secureQue + '\'' +
                ", secureAns='" + secureAns + '\'' +
                '}';
    }
}


//Creating BusinessLogicImplementation Class

package com.company;

public class BusinessImpl {
    DCC dcc;

    public String signUp(String userName, String passWord, String secureQue, String secureAns){
        dcc = new DCC(userName, passWord, secureQue, secureAns);
        System.out.println("Account created successfully");
        return dcc.toString();
    }

    public String signIn(String userName, String passWord){
        if(userName == dcc.getUserName()){
            if(passWord == dcc.getPassWord()){
                return "Sign in successful.";
            } else {
                return "username or password is incorrect";
            }
        }
        return "Credentials not exist";
    }

    public String forgetPassword(String userName, String secureQue, String secureAns){
        if(userName == dcc.getUserName()){
            if(secureQue == dcc.getSecureQue() && secureAns == dcc.getSecureAns()){
                System.out.println("Reset Password");
                return dcc.getPassWord();
            } else {
                return "cannot perform task";
            }
        }else {
            return "credentials does not exist";
        }
    }

    public String updatePassword(String userName, String passWord, String confirmPassWord){
        if(userName == dcc.getUserName()){
            if(passWord == dcc.getPassWord()){
                dcc.setPassWord(confirmPassWord);
                return "password updated successfully";
            } else {
                return "Password & new password mismatched";
            }
        }
        return "Credentials does not exists.";
    }
}


//The last and final Main class

package com.company;

public class Main {

    public static void main(String[] args) {
    BusinessImpl b = new BusinessImpl();
    String details = b.signUp("rhea0110", "rhea0110", "what is your pet's name?", "Ginger");
        System.out.println(details);
        System.out.println(b.signIn("rhea0110", "rhea0110"));
        System.out.println(b.forgetPassword("rhea0110", "What is your pet's name", "Ginger"));
        System.out.println(b.updatePassword("rhea0110", "rhea0110", "0110rhea"));
        System.out.println(b.signIn("rhea0110", "rhea0110"));
        System.out.println(b.signIn("rhea0110", "0110rhea"));
    }
}


